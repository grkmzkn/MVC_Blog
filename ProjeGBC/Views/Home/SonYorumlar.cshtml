@model IEnumerable<ProjeGBC.Models.Yorum>

@{
    Layout = null;
}


<div class="row">
    <div class="col-lg-12">
        <h4 class="card-header">Son Yapılan Yorumlar</h4>
        <div class="col-lg-12">
            <ul class="list-unstyled mb-0">
                @foreach (var item in Model)
                {
                    if (item.Icerik.Length > 75)
                    {
                        <p>@Html.Raw(item.Icerik.Substring(0, 75)) ... </p>
                    }
                    else
                    {
                        <p>@Html.Raw(item.Icerik)  </p>
                    }

                }
            </ul>
        </div>
    </div>
</div>

