@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-8">
    <h2>GBC İletişim</h2> <br />
</div>



<form col-md-8>
    <div class="form-group">
        <label for="exampleFormControlInput1">E-mail Adresiniz</label>
        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="ornek@ornek.com">
    </div>

    <label for="exampleFormControlInput1">Adınız ve Soyadınız</label>
    <div class="row">

        <div class="col">
            <input type="text" class="form-control" placeholder="Adınız">
        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Soyadınız">
        </div>
    </div>


    <div class="form-group mt-2">
        <label for="exampleFormControlTextarea1">Mesajınız</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        <br />
        <button class="btn btn-primary" type="submit">Gönder</button>
    </div>
</form>
