
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>GBC</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/Kaynaks/startbootstrap-sb-admin-gh-pages/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/Kaynaks/startbootstrap-sb-admin-gh-pages/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>

    
</head>
<body>
    
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index/">GBC</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active p-1">

                        @Html.ActionLink(ProjeGBC.Resources.HomeTexts.Anasayfa, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="nav-item p-1">
                        @Html.ActionLink(ProjeGBC.Resources.HomeTexts.Hakkımızda, "Hakkimizda", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="nav-item p-1">
                        @Html.ActionLink(ProjeGBC.Resources.HomeTexts.İletişim, "Create", "Contact", new { area = "" }, new { @class = "navbar-brand" })
                    </li>

                    <li class="nav-item p-1">
                        @Html.ActionLink(ProjeGBC.Resources.HomeTexts.Dil, "Index", "Language", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                </ul>



                <ul class="nav navbar-nav navbar-right top-nav">
                    @if (Session["uyeid"] != null)
                    {
                        <li class="dropdown">

                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user">@Session["kullaniciadi"].ToString()</i></a>
                            <ul class="dropdown-menu">

                                <li>
                                    <a href="/Uye/Index/@Session["uyeid"]">@Session["kullaniciadi"].ToString()<i class="fa fa-fw fa-user"></i>Profil</a>
                                </li>

                               
                                @if (Convert.ToInt32(Session["yetkiid"]) == 1)
                                {
                                    <li>
                                        <a href="/Admin/Index/" target="_blank"><i class="fa fa-fw fa-gear"></i>Admin Paneli</a>
                                    </li>
                                }
                                <li>
                                    <a href="/AdminMakale/Create/"><i class="fa fa-fw fa-power-off"></i>Makale Ekle</a>
                                </li>
                                <li>
                                    <a href="/Uye/Logout/"><i class="fa fa-fw fa-power-off"></i>Çıkış</a>
                                </li>


                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item p-1">
                            @Html.ActionLink(ProjeGBC.Resources.HomeTexts.Giriş, "Login", "Uye", new { area = "" }, new { @class = "navbar-brand" })
                        </li>
                        <li class="nav-item p-1">
                            @Html.ActionLink(ProjeGBC.Resources.HomeTexts.Kayıt_ol, "Create", "Uye", new { area = "" }, new { @class = "navbar-brand" })
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            @*Content*@
            <div class="col-md-8">
                @RenderBody()
            </div>

            <!-- Blog Post -->
            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Search Widget -->
                <div class="card my-4">
                    @Html.Partial("BlogAraPartial")
                </div>
                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Kategoriler</h5>
                    <div class="card-body">

                        @{

                            Html.RenderAction("KategoriPartial", "Home");
                        }
                    </div>
                </div>
                <!-- Side Widget -->

                <div class="card my-4">
                    @{
                        Html.RenderAction("PopulerMakaleler", "Home");
                    }
                </div>

                <div class="card my-4">
                    @{
                        Html.RenderAction("SonYorumlar", "Home");
                    }
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; GBC 2018</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>

    <script src="~/Content/Kaynaks/startbootstrap-sb-admin-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Kaynaks/startbootstrap-sb-admin-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


</body>
</html>
