@model IEnumerable<ProjeGBC.Models.Mesaj>

@{
    ViewBag.Title = "MesajGoster";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Mesaj Goster</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.İcerik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarih)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soyad)
        </td>
        <td>
            @if (item.İcerik.Length > 50)
            {
                <p>@Html.Raw(item.İcerik.Substring(0, 50)) ... </p>
            }
            else
            {
                <p>@Html.Raw(item.İcerik)  </p>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarih)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Sil", "Delete", new { id = item.MesajId })
        </td>

    </tr>
    }
</table>
